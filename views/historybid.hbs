<!-- main content -->

<div class="main-content">
    <div class="page-top-info">
        <div class="container">
            <h4>Lịch sử đấu giá</h4>
        </div>
    </div>
    <section class="product-section">
        <div class="container">
            <div class="back-link">
                <a href="/listproduct/{{this.temp}}"> &lt;&lt; Trở về chi tiết sản phẩm</a>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="product-pic-zoom">
                        <img class="product-big-img" src={{this.product.Image}} alt="" />
                    </div>
                </div>
                <div class="col-lg-6 product-details">
                    <h2 class="p-title">{{this.product.ProductName}}</h2>
                    <div class="history-bid table table-striped">
                        <table>
                            <tr>
                                <th>Thời điểm</th>
                                <th>Người mua</th>
                                <th>Giá</th>
                            </tr>
                            {{#if nobids}}
                            <tr>
                                <td>N/A</td>
                                <td>N/A</td>
                                <td>N/A</td>
                            </tr>
                            {{else}}
                            {{#each this.bids}}
                            <tr>
                                <td>{{BidDate}}</td>
                                <td>{{UserName}}</td>
                                <td>${{Price}}</td>
                            </tr>
                            {{/each}}
                            {{/if}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- main content end -->