{{#section 'css'}}
<link rel="stylesheet" href="/css/bootstrap.min.css" />
<link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css" />
<link rel="stylesheet" type="text/css" href="/css/util.css" />
<link rel="stylesheet" href="/css/admin.css" />

<link rel="stylesheet" href="/vendors/datatables.net-bs4/css/dataTables.bootstrap4.min.css" />
<link rel="stylesheet" href="/vendors/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" />

<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800" rel="stylesheet" type="text/css" />
{{/section}}


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Quản lý danh mục</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/account/profile">Trang chủ</a></li>
                    <li class="active">Quản lý danh mục</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated">
        <div class="card">
            <div class="card-header">
                <div class="d-inline-block w-50">
                    <strong class="card-title">Cập nhật danh mục sản phẩm: </strong>
                    <button class="m-l-10 btn btn-secondary">Cập nhật</button>
                </div>
                <div class="d-inline w-50">
                    <strong class="card-title">Thêm: </strong>
                    <button class="m-l-10 btn btn-secondary">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Danh sách danh mục</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <th>ID</th>
                                <th>Tên danh mục</th>
                                <th>Số lượng sản phẩm</th>
                                <th>Xoá</th>
                            </thead>
                            <tbody>
                                {{#each lcCategories}}
                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{category}}</td>
                                    <td>{{ProNum}}</td>
                                    <td>
                                        <form action="/account/admin/listcategory/delete" method="POST">
                                            <input name="ID" type="hidden" value="{{id}}"></input>
                                            <input name="PN" type="hidden" value="{{ProNum}}"></input>
                                            <input class="site-btn" type="submit" value="DELETE"></input>
                                        </form>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="confirm">
    <div></div>
    <div>
        <div id="confirmMessage">Confirm text</div>
        <div>
            <input id="confirmYes" type="button" value="Xác nhận" />
            <input id="confirmNo" type="button" value="Huỷ bỏ" />
        </div>
    </div>
</div>

{{#section 'js'}}
<script src="/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="/vendors/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
<script src="/vendors/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>
<script src="/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
<script src="/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
<script src="/vendors/datatables.net-buttons/js/buttons.colVis.min.js"></script>
<script src="/js/main.js"></script>
<script src="/js/datatables-init.js"></script>
{{/section}}